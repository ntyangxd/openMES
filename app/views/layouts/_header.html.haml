.navbar
  .navbar-inner
    .container
      = link_to '设备管理系统', root_path, :class=>'brand'
      %ul.nav
        %li.active
          = link_to '设备管理', root_path
        %li
          = link_to '制造管理', root_path
        %li
          = link_to '品质管理', root_path
        %li.dropdown
          %a.dropdown-toggle{'data-toggle'=>"dropdown", :href=>'#'}
            系统管理
            %b.caret
          %ul.dropdown-menu
            %li= link_to '用户管理', root_path
            %li= link_to '修改密码', root_path
            %li= link_to '权限设置', root_path

      %ul.nav.pull-right
        - if current_user
          %li
            = current_user.name
          %li
            = link_to '注销', logout_path
        - else
          %li
            = link_to '登录', login_path

